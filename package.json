{
  "name": "vector-math",
  "version": "0.1.0",
  "description": "A JavaScript 2D and 3D vector library with methods for common vector operations",
  "author": {
    "name": "Ryan Kane",
    "email": "rmkane89@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://kanebytes.dev/vector-math",
  "repository": {
    "type": "git",
    "url": "https://github.com/rmkane/vector-math.git"
  },
  "bugs": {
    "url": "https://github.com/rmkane/vector-math/issues"
  },
  "keywords": [
    "2D",
    "3D",
    "Vector",
    "Math",
    "TypeScript",
    "JavaScript"
  ],
  "type": "module",
  "main": "./dist/vector-math.umd.cjs",
  "module": "./dist/vector-math.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vector-math.js",
      "require": "./dist/vector-math.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "docs": "typedoc src/index.ts",
    "lint": "npx eslint --ignore-path .eslintignore --ext .js,.ts .",
    "lint:fix": "npm run lint -- --fix",
    "format": "npx prettier --ignore-path .gitignore --check \"**/*.+(js|ts|json)\"",
    "format:fix": "npm run format -- --write"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.3",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^38.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.3",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.5.2",
    "vitest": "^0.34.2"
  }
}
